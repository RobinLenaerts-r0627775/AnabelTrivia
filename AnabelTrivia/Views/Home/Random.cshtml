@model AnabelTrivia.Data.Question

@{
    ViewData["Title"] = Model.Category;
}
    <h1>@Model.Category</h1>

<div>
    <hr/>
    <p>@Model.QuestionText</p>
</div>
<div>
    <h4>Pick another question:</h4>
    @foreach (var cat in ViewBag.Categories)
    {
        <a class="btn btn-primary" asp-controller="Home" asp-action="Random" asp-route-category="@cat">@cat</a>
    }
</div>
